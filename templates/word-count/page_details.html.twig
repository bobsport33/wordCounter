{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col gap-2">
        <h1 class="text-lg text-gray-100"><span class="text-gray-300 font-medium">Word Density for:</span> {{ post.url }}</h1>
        <p class="text-sm text-gray-100"><span class="text-sm text-gray-300 font-medium">Notes:</span> {{ post.notes }}</p>
        <p class="text-sm text-gray-100"><span class="text-sm text-gray-300 font-medium">Creation On:</span> {{ post.createdDate | date("M j, Y") }}</p>
        <div class="mx-4">
            <p class="text-md text-gray-200 font-medium">Top Words</p>
            {% for word, count in wordCounts %}
                <p class="text-gray-200">{{ word }} - {{count }}%</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block title %} Word Density Map of {{ post.url }} {% endblock %}