{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
        <div>{{ form_errors(form)}}</div>

        <div >
            {{ form_label(form.url, 'Please enter a url', {'label_attr': {'class': 'block text-sm text-gray-300 font-medium'}})}}
            {{ form_widget(form.url, {'attr': {'class': 'block w-full shadow-sm border-transparent text-gray-800 rounded-md border p-2 mt-1 mb-2'}})}}
            {{ form_errors(form.url) }}
        </div>
        

        <div>
            {{ form_label(form.notes, 'Enter a note', {'label_attr': {'class': 'block text-sm text-gray-300 font-medium'}})}}
            {{ form_widget(form.notes, {'attr': {'class': 'block w-full shadow-sm border-transparent text-gray-800 rounded-md border p-2 mt-1 mb-2'}})}}
        </div>
      

        <div>
            <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Save</button>
        </div>
    {{ form_end(form) }}
{% endblock %}
