{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
        {% if posts|length > 0 %}           
                {% for post in posts %}
                    <div class="mb-4">
                        <div class="text-2xl">
                            <a href="{{ path('app_page_details', {id: post.id}) }}">{{post.url}}</a>
                        </div>
                        <div class="text-gray-400">
                            {{ post.createdDate | date("M j, Y")}}
                        </div>
                    </div>
                {% endfor %}
        {% else %}
            <div>No entries yet. Please add a url.</div>
        {% endif %}    
    </div>
{% endblock %}

